{
  "name": "yaml-2-json",
  "displayName": "yaml-2-json",
  "description": "VS Code Extension that replaces YAML with JSON",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:y2j.toggleFiletype"
  ],
  "contributes": {
    "commands": [
      {
        "command": "y2j.toggleFiletype",
        "title": "Convert between YAML and JSON"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "dev": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "lossless-yaml-2-json": "*",
    "yaml": "^2.1.1"
  }
}
