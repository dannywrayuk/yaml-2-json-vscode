{
  "name": "yaml-json-converter-vscode",
  "displayName": "YAML to JSON Converter",
  "description": "Lossless conversion between YAML and JSON",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:yjc.toggleFiletype"
  ],
  "contributes": {
    "commands": [
      {
        "command": "yjc.toggleFiletype",
        "title": "Toggle between YAML and JSON"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "dev": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "ly2j": "*"
  }
}
